# Pilates Class Planner v2.0 - Environment Variables
# Copy this file to .env and fill in your actual values

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# ==========================================
# OPENAI / ANTHROPIC API KEYS
# ==========================================
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# ==========================================
# REDIS CACHE
# ==========================================
REDIS_URL=redis://localhost:6379
REDIS_TTL=86400  # 24 hours in seconds

# ==========================================
# MCP PLAYWRIGHT SERVER
# ==========================================
MCP_PLAYWRIGHT_URL=http://localhost:3001
MCP_RATE_LIMIT=30
MCP_CONCURRENT_SESSIONS=3

# ==========================================
# JWT AUTHENTICATION
# ==========================================
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==========================================
# PII TOKENIZATION
# ==========================================
PII_ENCRYPTION_KEY=your-32-byte-encryption-key-change-this

# ==========================================
# SOUNDCLOUD API (for music recommendations)
# ==========================================
SOUNDCLOUD_CLIENT_ID=your-soundcloud-client-id
SOUNDCLOUD_CLIENT_SECRET=your-soundcloud-secret

# ==========================================
# EXCEL DATABASE PATH
# ==========================================
EXCEL_DATABASE_PATH=/Users/lauraredmond/Documents/Bassline/Admin/7. Product/Design Documentation/Pilates_Summary_Spreadsheet_teachingTracker_v10.xlsm

# ==========================================
# APPLICATION SETTINGS
# ==========================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==========================================
# EU AI ACT COMPLIANCE
# ==========================================
AI_LOGGING_ENABLED=true
BIAS_MONITORING_ENABLED=true
DRIFT_DETECTION_THRESHOLD=0.15

# ==========================================
# SENTRY (Error Tracking)
# ==========================================
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=development
